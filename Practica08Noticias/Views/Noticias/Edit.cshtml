@model Practica08Noticias.Models.Noticias

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Noticias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NoticiasID" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contenido" class="control-label"></label>
                <textarea asp-for="Contenido" class="form-control"></textarea>
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="FechaPublicacion" class="control-label"></label>
                <input asp-for="FechaPublicacion" class="form-control" />
                <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="CategoriasID" class="control-label"></label>
                <select asp-for="CategoriasID" class="form-control" asp-items="ViewBag.CategoriasID"></select>
                <span asp-validation-for="CategoriasID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
